--[[
    Paste script ini di Command Bar/Script Executor untuk membuat UI mirip foto.
    Semua elemen (warna, teks, posisi) bisa diubah lagi supaya lebih identik!
--]]

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player.PlayerGui)
gui.Name = "CustomUI"
gui.ResetOnSpawn = false

-- Sidebar
local sidebar = Instance.new("Frame", gui)
sidebar.BackgroundColor3 = Color3.fromRGB(23, 32, 46)
sidebar.Size = UDim2.new(0,200,1,0)
sidebar.Position = UDim2.new(0,0,0,0)

-- Title
local title = Instance.new("TextLabel", sidebar)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1,0,0,40)
title.Position = UDim2.new(0, 0, 0, 10)
title.Text = "zyn || Eploit"
title.TextColor3 = Color3.fromRGB(220, 232, 255)
title.TextSize = 22
title.Font = Enum.Font.GothamSemibold

-- Badge (Versi)
local badge = Instance.new("TextLabel", sidebar)
badge.Size = UDim2.new(0,64,0,24)
badge.Position = UDim2.new(0,130,0,15)
badge.BackgroundColor3 = Color3.fromRGB(44, 248, 130)
badge.TextColor3 = Color3.fromRGB(23,32,46)
badge.TextSize = 15
badge.Font = Enum.Font.GothamBold
badge.Text = "V1.0.1"
badge.BackgroundTransparency = 0
badge.BorderSizePixel = 0
badge.ClipsDescendants = true
badge.ZIndex = 3
badge.TextXAlignment = Enum.TextXAlignment.Center
badge.TextYAlignment = Enum.TextYAlignment.Center
badge.UICorner = Instance.new("UICorner", badge)
badge.UICorner.CornerRadius = UDim.new(0, 8)

-- Sidebar Menu
local sideBtns = {"Main", "Tools", "Tampilan", "Info"}
local btnList = {}
for i, v in ipairs(sideBtns) do
    local btn = Instance.new("TextButton", sidebar)
    btn.Name = v
    btn.Size = UDim2.new(1, -26, 0, 32)
    btn.Position = UDim2.new(0, 12, 0, 60 + (i-1) * 48)
    btn.BackgroundColor3 = i == 1 and Color3.fromRGB(39, 52, 77) or Color3.fromRGB(23,32,46)
    btn.TextColor3 = Color3.fromRGB(240,244,255)
    btn.Text = v
    btn.TextSize = 17
    btn.Font = Enum.Font.Gotham
    btn.AutoButtonColor = false
    btn.ZIndex = 3

    local round = Instance.new("UICorner", btn)
    round.CornerRadius = UDim.new(0,8)

    btnList[i] = btn
end

-- Main Panel
local mainPanel = Instance.new("Frame", gui)
mainPanel.BackgroundColor3 = Color3.fromRGB(17,25,39)
mainPanel.Position = UDim2.new(0,215,0,0)
mainPanel.Size = UDim2.new(1,-215,1,0)

-- Template Card (Bisa diduplikasi & modif untuk fitur-fitur lain)
local function createCard(label1, content, position)
    local card = Instance.new("Frame", mainPanel)
    card.BackgroundColor3 = Color3.fromRGB(28,37,56)
    card.Size = UDim2.new(0,380,0,60)
    card.Position = UDim2.new(0,24,0,24 + (position-1)*76)
    card.BorderSizePixel = 0

    local corner = Instance.new("UICorner", card)
    corner.CornerRadius = UDim.new(0,12)

    local title = Instance.new("TextLabel", card)
    title.BackgroundTransparency = 1
    title.Position = UDim2.new(0,16,0,6)
    title.Size = UDim2.new(1,-32,0,22)
    title.Font = Enum.Font.GothamSemibold
    title.TextColor3 = Color3.fromRGB(220,232,255)
    title.TextSize = 18
    title.Text = label1
    title.TextXAlignment = Enum.TextXAlignment.Left

    local desc = Instance.new("TextLabel", card)
    desc.BackgroundTransparency = 1
    desc.Position = UDim2.new(0,16,0,28)
    desc.Size = UDim2.new(1,-32,0,20)
    desc.Font = Enum.Font.Gotham
    desc.TextColor3 = Color3.fromRGB(180,200,220)
    desc.TextSize = 15
    desc.TextXAlignment = Enum.TextXAlignment.Left
    desc.Text = content or ""
end

-- Contoh card
createCard("Speed", "1.00x", 1)
createCard("Interval Flip", "ON â†’ Hadap belakang tiap frame", 2)
createCard("Anti Beton Ultra-Smooth", "Mencegah jatuh secara kaku saat melayang", 3)
createCard("START", "Mulai dari checkpoint terdekat", 4)
createCard("AWAL KE AKHIR", "Jalankan semua checkpoint", 5)

