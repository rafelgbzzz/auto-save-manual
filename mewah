-- ZeroKageゼロ影
-- Speed Run Feature With Elegant UI

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ZeroKageゼロ影"
screenGui.Parent = playerGui

-- Create Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 220)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -110)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
mainFrame.BorderSizePixel = 0
mainFrame.BackgroundTransparency = 0.25
mainFrame.Parent = screenGui

-- Rounded corners
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 20)
uiCorner.Parent = mainFrame

-- Create Title
local title = Instance.new("TextLabel")
title.Text = "ZeroKageゼロ影"
title.Font = Enum.Font.GothamBold
title.TextColor3 = Color3.fromRGB(205, 180, 255)
title.TextSize = 26
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0, 48)
title.Parent = mainFrame

-- Separator line
local sep = Instance.new("Frame")
sep.Size = UDim2.new(1, -40, 0, 2)
sep.Position = UDim2.new(0, 20, 0, 54)
sep.BackgroundColor3 = Color3.fromRGB(65, 50, 110)
sep.BorderSizePixel = 0
sep.Parent = mainFrame

-- Speed Run Label
local speedLabel = Instance.new("TextLabel")
speedLabel.Text = "Speed Run"
speedLabel.Font = Enum.Font.Gotham
speedLabel.TextColor3 = Color3.fromRGB(255, 235, 170)
speedLabel.TextSize = 20
speedLabel.BackgroundTransparency = 1
speedLabel.Position = UDim2.new(0, 28, 0, 70)
speedLabel.Size = UDim2.new(0, 120, 0, 32)
speedLabel.TextXAlignment = Enum.TextXAlignment.Left
speedLabel.Parent = mainFrame

-- Slider
local slider = Instance.new("Frame")
slider.Size = UDim2.new(0, 260, 0, 12)
slider.Position = UDim2.new(0, 28, 0, 110)
slider.BackgroundColor3 = Color3.fromRGB(90, 70, 140)
slider.BorderSizePixel = 0
slider.Parent = mainFrame

local sliderCorner = Instance.new("UICorner")
sliderCorner.CornerRadius = UDim.new(1, 0)
sliderCorner.Parent = slider

local handle = Instance.new("Frame")
handle.Size = UDim2.new(0, 16, 0, 24)
handle.Position = UDim2.new(0, 0, 0.5, -6)
handle.BackgroundColor3 = Color3.fromRGB(205, 180, 255)
handle.Parent = slider

local handleCorner = Instance.new("UICorner")
handleCorner.CornerRadius = UDim.new(1, 0)
handleCorner.Parent = handle

local valueLabel = Instance.new("TextLabel")
valueLabel.Text = "16"
valueLabel.Font = Enum.Font.Gotham
valueLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
valueLabel.TextSize = 16
valueLabel.BackgroundTransparency = 1
valueLabel.Position = UDim2.new(0, 300, 0, 100)
valueLabel.Size = UDim2.new(0, 60, 0, 24)
valueLabel.Parent = mainFrame

-- Slider Functionality
local UIS = game:GetService("UserInputService")
local dragging = false
local minSpeed = 16
local maxSpeed = 100

local function setSpeed(val)
    local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
    if hum then
        hum.WalkSpeed = val
    end
    valueLabel.Text = tostring(val)
end

handle.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
    end
end)

handle.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

UIS.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local mouseX = UIS:GetMouseLocation().X
        local absPos = slider.AbsolutePosition.X
        local relX = math.clamp(mouseX - absPos, 0, slider.AbsoluteSize.X - handle.AbsoluteSize.X)
        handle.Position = UDim2.new(0, relX, 0.5, -6)
        local val = math.floor(minSpeed + ((relX / (slider.AbsoluteSize.X - handle.AbsoluteSize.X)) * (maxSpeed-minSpeed)))
        setSpeed(val)
    end
end)

-- Default Value
setSpeed(16)
