-- Zero

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer

local function createInstance(className, props)
    local inst = Instance.new(className)
    for k,v in pairs(props or {}) do
        inst[k] = v
    end
    return inst
end

local playerGui = player:FindFirstChildOfClass("PlayerGui") or Instance.new("PlayerGui", player)

local screenGui = createInstance("ScreenGui", {
    Name = "ZeroKageHomeMenu",
    Parent = playerGui,
    ResetOnSpawn = false,
})

-- Shadow pada frame utama
local shadowFrame = createInstance("Frame", {
    Size = UDim2.new(0, 610, 0, 370),
    Position = UDim2.new(0.5, 0, 0.5, 0),
    AnchorPoint = Vector2.new(0.5, 0.5),
    BackgroundColor3 = Color3.fromRGB(0, 0, 0),
    BackgroundTransparency = 0.6,
    BorderSizePixel = 0,
    Parent = screenGui,
    ZIndex = 1,
})
createInstance("UICorner", {CornerRadius=UDim.new(0,14), Parent=shadowFrame})

local mainFrame = createInstance("Frame", {
    Size = UDim2.new(0, 600, 0, 350),
    Position = UDim2.new(0, 5, 0, 5),
    BackgroundColor3 = Color3.fromRGB(30, 30, 35),
    BorderSizePixel = 0,
    Parent = shadowFrame,
    ZIndex = 2,
})
createInstance("UICorner", {CornerRadius=UDim.new(0,14), Parent=mainFrame})

local title = createInstance("TextLabel", {
    Text = "ZeroKage „Çº„É≠ÂΩ±",
    Font = Enum.Font.GothamBold,
    TextSize = 30,
    TextColor3 = Color3.fromRGB(180, 200, 255),
    BackgroundTransparency = 1,
    Size = UDim2.new(1, 0, 0, 50),
    Position = UDim2.new(0, 0, 0, 10),
    Parent = mainFrame,
    TextXAlignment = Enum.TextXAlignment.Center,
    ZIndex = 3,
})

local buttonContainer = createInstance("Frame", {
    Size = UDim2.new(1, -40, 1, -70),
    Position = UDim2.new(0, 20, 0, 60),
    BackgroundTransparency = 1,
    Parent = mainFrame,
    ZIndex = 3,
})
local layout = createInstance("UIGridLayout", {
    CellSize = UDim2.new(0, 180, 0, 60),
    CellPadding = UDim2.new(0, 15, 0, 15),
    FillDirectionMaxCells = 3,
    HorizontalAlignment = Enum.HorizontalAlignment.Center,
    VerticalAlignment = Enum.VerticalAlignment.Top,
    Parent = buttonContainer,
})

local function createMenuButton(text, callback)
    local btn = createInstance("TextButton", {
        Text = text,
        Font = Enum.Font.GothamBold,
        TextSize = 20,
        TextColor3 = Color3.new(1,1,1),
        BackgroundColor3 = Color3.fromRGB(55, 75, 255),
        AutoButtonColor = false,
        Size = UDim2.new(0, 180, 0, 60),
        Parent = buttonContainer,
        ZIndex = 4,
    })
    createInstance("UICorner", {CornerRadius=UDim.new(0, 12), Parent=btn})

    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(90, 110, 255)
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(55, 75, 255)
    end)

    btn.MouseButton1Click:Connect(function()
        if callback then callback() end
    end)

    return btn
end

createMenuButton("üåç Teleport", function() print("Teleport pressed") end)
createMenuButton("‚úàÔ∏è Fly Mode", function() print("Fly Mode pressed") end)
createMenuButton("‚ö° Speed", function() print("Speed pressed") end)
createMenuButton("üíæ Copy Position", function() print("Copy Pos pressed") end)
createMenuButton("ü¶ò Jump", function() print("Jump pressed") end)
createMenuButton("‚öôÔ∏è Settings", function() print("Settings pressed") end)

UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.UserInputType == Enum.UserInputType.Keyboard and input.KeyCode == Enum.KeyCode.E then
        shadowFrame.Visible = not shadowFrame.Visible
    end
end)
