-- Buat GUI
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SpeedControlGui"
screenGui.Parent = playerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 100)
frame.Position = UDim2.new(0, 20, 0, 20)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local txtLabel = Instance.new("TextLabel")
txtLabel.Size = UDim2.new(1, 0, 0, 30)
txtLabel.Position = UDim2.new(0, 0, 0, 10)
txtLabel.BackgroundTransparency = 1
txtLabel.Text = "Atur Kecepatan Lari:"
txtLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
txtLabel.Font = Enum.Font.SourceSansBold
txtLabel.TextSize = 22
txtLabel.Parent = frame

local slider = Instance.new("TextBox")
slider.Size = UDim2.new(0.8, 0, 0, 40)
slider.Position = UDim2.new(0.1, 0, 0, 50)
slider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
slider.TextColor3 = Color3.fromRGB(255, 255, 255)
slider.Text = "16" -- default speed
slider.Font = Enum.Font.SourceSans
slider.TextSize = 24
slider.ClearTextOnFocus = false
slider.Parent = frame

-- Function untuk update kecepatan
local function updateSpeed()
    local speed = tonumber(slider.Text)
    if speed and speed >= 0 and speed <= 100 then
        local character = player.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.WalkSpeed = speed
        end
    end
end

-- Event ketika teks di slider berubah
slider.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        updateSpeed()
    end
end)

-- Saat karakter spawn, set speed default
player.CharacterAdded:Connect(function(char)
    char:WaitForChild("Humanoid").WalkSpeed = tonumber(slider.Text) or 16
end)

-- Set kecepatan waktu mulai script
updateSpeed()
