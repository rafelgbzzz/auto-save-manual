local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ExactBloxFruitsGUI"
screenGui.Parent = playerGui

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 360, 0, 420)
mainFrame.Position = UDim2.new(0, 10, 0, 10)
mainFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 18) -- Hitam gelap
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local uicornerMain = Instance.new("UICorner")
uicornerMain.CornerRadius = UDim.new(0, 15)
uicornerMain.Parent = mainFrame

-- Title bar merah
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0, 45)
titleBar.Position = UDim2.new(0, 0, 0, 0)
titleBar.BackgroundColor3 = Color3.fromRGB(190, 0, 0) -- merah cerah
titleBar.Parent = mainFrame

local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 1, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 28
titleLabel.Text = "Blox Fruits Script"
titleLabel.Parent = titleBar

-- Container tombol utama
local buttonContainer = Instance.new("Frame")
buttonContainer.Size = UDim2.new(1, -40, 0, 320)
buttonContainer.Position = UDim2.new(0, 20, 0, 60)
buttonContainer.BackgroundTransparency = 1
buttonContainer.Parent = mainFrame

local layout = Instance.new("UIListLayout")
layout.FillDirection = Enum.FillDirection.Vertical
layout.Padding = UDim.new(0, 15)
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.VerticalAlignment = Enum.VerticalAlignment.Top
layout.Parent = buttonContainer

-- Fungsi buat tombol dengan style persis
local function createButton(text)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, 0, 0, 48)
    btn.BackgroundColor3 = Color3.fromRGB(35, 35, 35) -- abu gelap
    btn.TextColor3 = Color3.fromRGB(190, 0, 0) -- merah
    btn.Font = Enum.Font.GothamSemibold
    btn.TextSize = 22
    btn.Text = text
    btn.AutoButtonColor = false

    local uicornerBtn = Instance.new("UICorner")
    uicornerBtn.CornerRadius = UDim.new(0, 12)
    uicornerBtn.Parent = btn

    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(190, 0, 0)
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
        btn.TextColor3 = Color3.fromRGB(190, 0, 0)
    end)
    return btn
end

-- Tambah beberapa tombol contoh persis seperti di video
local btnAutoFarm = createButton("Toggle Auto Farm")
btnAutoFarm.Parent = buttonContainer

local btnTeleport = createButton("Teleport to Boss")
btnTeleport.Parent = buttonContainer

local btnAutoBoss = createButton("Toggle Auto Boss")
btnAutoBoss.Parent = buttonContainer

local btnEvent = createButton("Join Sea Event")
btnEvent.Parent = buttonContainer

local btnFruitFarm = createButton("Toggle Auto Fruit Farm")
btnFruitFarm.Parent = buttonContainer
