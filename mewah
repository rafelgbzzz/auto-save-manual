local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Membuat ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ZeroKageSidebar"
screenGui.Parent = playerGui

-- Membuat frame sidebar di kiri
local sidebar = Instance.new("Frame")
sidebar.Name = "Sidebar"
sidebar.Size = UDim2.new(0, 200, 1, 0) -- Lebar 200px, tinggi penuh layar
sidebar.Position = UDim2.new(0, 0, 0, 0) -- di kiri atas
sidebar.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
sidebar.Parent = screenGui

-- Membuat header label
local header = Instance.new("TextLabel")
header.Size = UDim2.new(1, 0, 0, 50)
header.Position = UDim2.new(0, 0, 0, 0)
header.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
header.TextColor3 = Color3.new(1,1,1)
header.Text = "ZeroKageゼロ影"
header.Font = Enum.Font.SourceSansBold
header.TextSize = 24
header.Parent = sidebar

-- Fungsi membuat tombol
local function buatTombol(text, posisiY)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -20, 0, 40)
    button.Position = UDim2.new(0, 10, 0, posisiY)
    button.Text = text
    button.Font = Enum.Font.SourceSans
    button.TextSize = 20
    button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    button.TextColor3 = Color3.new(1,1,1)
    button.Parent = sidebar
    return button
end

-- Tombol-tombol seperti di gambar
local tombolVerifikasi = buatTombol("Verifikasi", 60)
local tombolTeleport = buatTombol("Teleport", 110)
local tombolFitur = buatTombol("Fitur", 160)
local tombolKecepatan = buatTombol("Kecepatan", 210)

-- Membuat sub-menu Kecepatan saat tombol kecepatan diklik
local subMenu = Instance.new("Frame")
subMenu.Size = UDim2.new(1, -20, 0, 150)
subMenu.Position = UDim2.new(0, 10, 0, 260)
subMenu.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
subMenu.Visible = false
subMenu.Parent = sidebar

local labelFly = Instance.new("TextLabel")
labelFly.Text = "Kecepatan Fly"
labelFly.Size = UDim2.new(1, 0, 0, 30)
labelFly.TextColor3 = Color3.new(1,1,1)
labelFly.BackgroundTransparency = 1
labelFly.Parent = subMenu

local sliderFly = Instance.new("TextButton") -- simplifikasi sebagai tombol ubah
sliderFly.Text = "60 Speed"
sliderFly.Size = UDim2.new(1, -20, 0, 30)
sliderFly.Position = UDim2.new(0, 10, 0, 40)
sliderFly.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
sliderFly.TextColor3 = Color3.new(1,1,1)
sliderFly.Parent = subMenu

local labelRun = Instance.new("TextLabel")
labelRun.Text = "Kecepatan Lari"
labelRun.Size = UDim2.new(1, 0, 0, 30)
labelRun.Position = UDim2.new(0, 0, 0, 80)
labelRun.TextColor3 = Color3.new(1,1,1)
labelRun.BackgroundTransparency = 1
labelRun.Parent = subMenu

local sliderRun = Instance.new("TextButton") -- simplifikasi sebagai tombol ubah
sliderRun.Text = "16 Speed"
sliderRun.Size = UDim2.new(1, -20, 0, 30)
sliderRun.Position = UDim2.new(0, 10, 0, 120)
sliderRun.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
sliderRun.TextColor3 = Color3.new(1,1,1)
sliderRun.Parent = subMenu

-- Toggle submenu kecepatan
tombolKecepatan.MouseButton1Click:Connect(function()
    subMenu.Visible = not subMenu.Visible
end)

-- Contoh fungsi klik tombol lainnya (dummy)
tombolVerifikasi.MouseButton1Click:Connect(function()
    print("Tombol Verifikasi diklik")
end)
tombolTeleport.MouseButton1Click:Connect(function()
    print("Tombol Teleport diklik")
end)
tombolFitur.MouseButton1Click:Connect(function()
    print("Tombol Fitur diklik")
end)
